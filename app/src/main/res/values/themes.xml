<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ThymeMatters" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_green</item>
        <item name="colorPrimaryDark">@color/dark_green</item>
        <item name="colorAccent">@color/green</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorButtonNormal">@color/light_green</item>
        <item name="colorError">@color/error_red</item>
        <item name="android:textColor">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MenuStyle" parent="Theme.AppCompat.Light">
        <item name = "android:background">@android:color/white</item>
    </style>

    <!--These styles are for sylable toasts-->

    <style name="invalidLogin">
        <item name="stColorBackground">#F34C4C </item>
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/white</item>
        <item name="stStrokeWidth">1dp</item>
        <item name="stStrokeColor">#F34C4C</item>
        <item name="stRadius">30dp</item>
        <item name="stIconStart">@drawable/ic_baseline_error_outline_24</item>


    </style>
    <style name="noInternet">
        <item name="stColorBackground">@color/black </item>
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/white</item>
        <item name="stStrokeWidth">1dp</item>
        <item name="stStrokeColor">@color/black</item>
        <item name="stRadius">30dp</item>
        <item name="stIconStart">@drawable/ic_no_internet</item>


    </style>

    <style name="success">
        <item name="stColorBackground">@color/green </item>
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/white</item>
        <item name="stStrokeWidth">1dp</item>
        <item name="stStrokeColor">@color/green</item>
        <item name="stRadius">30dp</item>
        <item name="stIconStart">@drawable/ic_tick</item>


    </style>

    <style name="adminAwaitingCertification">
        <item name="stColorBackground">@color/dark_purple </item>
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/white</item>
        <item name="stStrokeWidth">1dp</item>
        <item name="stStrokeColor">@color/dark_purple</item>
        <item name="stRadius">30dp</item>
        <item name="stIconStart">@drawable/ic_baseline_error_outline_24</item>


    </style>

    <!--This is a comment-->
    <!--The following style is for alert dialogs-->

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/white</item>
    </style>

</resources>