<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Order_Confirmed">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/ActionBar"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_below="@+id/appbar"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logo"/>

            <TextView
                android:layout_width="291dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="THYME MATTERS"
                android:textColor="@color/dark_green"
                android:textSize="20dp" />


        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/thanks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ActionBar"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="84dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:padding="50dp"
        android:text="Thank you!"
        android:textColor="@color/dark_green"
        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_orderplaced"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thanks"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="9dp"
        android:gravity="center"
        android:padding="15dp"
        android:text="Your order has been placed successfully!"
        android:textColor="@color/dark_purple"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/track_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_orderplaced"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="115dp"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/here"
        android:textColor="@color/dark_purple"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="199dp"
        android:layout_below="@+id/track_order"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="85dp"
        android:layout_marginBottom="-88dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/banner" />


</RelativeLayout>