<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewOrderContents">

    <TextView
        android:id="@+id/lblOrderHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_green"
        android:fontFamily="cursive"
        android:textSize="40dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="1dp"
        android:text="Order Details" />

    <TextView
        android:id="@+id/txtOrderNo"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_green"
        android:fontFamily="sans-serif-light"
        android:textSize="15dp"
        android:layout_marginLeft="11dp"

        android:layout_marginRight="11dp"
        android:layout_marginBottom="5dp"
        android:text="" />

    <LinearLayout
        android:id="@+id/order_detail_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/lblMeals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_green"
        android:fontFamily="cursive"
        android:textSize="40dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="1dp"
        android:text="Meals Ordered" />

    <TextView
        android:id="@+id/txtOrderNo_2"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_green"
        android:fontFamily="sans-serif-light"
        android:textSize="15dp"
        android:layout_marginLeft="11dp"

        android:layout_marginRight="11dp"
        android:layout_marginBottom="5dp"
        android:text="" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/box_for_meals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>


</LinearLayout>