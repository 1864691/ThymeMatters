<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="6dp">

        <ImageView
            android:id="@+id/image_meal"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:src="@drawable/fish1"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selected Meal:"
                android:textSize="15dp"
                android:textStyle="bold"
                android:id="@+id/txt_meal_name" />


            <TextView
                android:id="@+id/meal_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="103dp"
                android:layout_toEndOf="@+id/txt_meal_name"
                android:text="hake and chips "
                android:textSize="15dp" />


        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery date:"
            android:textSize="15sp"
            android:id="@+id/txt_delivery_date" />

            <TextView
                android:id="@+id/delivery_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="119dp"
                android:text="25 August 2021" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_serving_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp"
                android:text="Serving Size:"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/serving_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="88dp"
                android:text="4" />

            <TextView
                android:id="@+id/txt_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="92dp"
                android:layout_marginBottom="0dp"
                android:text="Qty:"
                android:textSize="15sp" />

            <Button
                android:id="@+id/decrease"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginEnd="1dp"
                android:layout_toStartOf="@+id/integer_number"
                android:text="-"
                android:textSize="3dp"/>

            <EditText
                android:id="@+id/integer_number"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="0dp"
                android:layout_toStartOf="@+id/increase"
                android:text="0"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="70sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/increase"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:text="+" />

        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_meal_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price:"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/meal_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="40dp"
                android:text="R350" />

            <ImageView
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_baseline_delete_24" />

        </RelativeLayout>


    </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>