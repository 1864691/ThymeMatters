<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="6dp">

    <ImageView
        android:id="@+id/image_meal"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/fish1"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selected Meal:"
            android:textSize="15dp"
            android:textStyle="bold"
            android:id="@+id/txt_meal_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery date:"
            android:textSize="15sp"
            android:id="@+id/txt_delivery_date" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Serving Size: 2"
            android:textSize="15sp"
            android:id="@+id/txt_serving_size" />

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R345"
                android:textSize="15sp"
                android:id="@+id/txt_meal_price" />

            <ImageView
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="-3dp"
                android:layout_marginRight="-3dp"
                android:src="@drawable/ic_baseline_delete_24" />

        </RelativeLayout>


    </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>