<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MeatActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/ActionBar"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_below="@+id/appbar"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logo"/>

            <TextView
                android:layout_width="251dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="THYME MATTERS"
                android:textColor="@color/dark_green"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/menu_btn"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_below="@+id/appbar"
                android:layout_centerHorizontal="true"
                android:src="@drawable/menu" />


        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:layout_below="@id/ActionBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_green"
                android:fontFamily="cursive"
                android:textSize="40dp"
                android:text="Meat Menu:"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_green"
                android:fontFamily="sans-serif-light"
                android:textSize="20dp"
                android:text="Please select an option:"/>

            <ImageView
                android:id="@+id/meat1"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/meat1"/>

            <ImageView
                android:id="@+id/meat2"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/meat2"/>

            <ImageView
                android:id="@+id/meat3"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/meat3"/>

            <ImageView
                android:id="@+id/meat4"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/meat4"/>

            <ImageView
                android:id="@+id/meat5"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/meat5"/>

            <ImageView
                android:id="@+id/meat6"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/meat6"/>

            <ImageView
                android:id="@+id/meat7"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/meat7"/>

            <ImageView
                android:id="@+id/meat8"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/meat8"/>

            <ImageView
                android:id="@+id/meat9"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/meat9"/>

            <ImageView
                android:id="@+id/meat10"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/meat10"/>

            <ImageView
                android:id="@+id/meat11"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/meat11"/>

            <ImageView
                android:id="@+id/meat12"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/meat12"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>